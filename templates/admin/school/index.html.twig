{% extends 'base.html.twig' %}

{% block title %}School index{% endblock %}

{% block body %}
    <h1>School index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Whatsapp</th>
                <th>Logo</th>
                <th>AboutText</th>
                <th>Mission</th>
                <th>Vision</th>
                <th>PrincipalMessage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school in schools %}
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.name }}</td>
                <td>{{ school.address }}</td>
                <td>{{ school.phone }}</td>
                <td>{{ school.email }}</td>
                <td>{{ school.whatsapp }}</td>
                <td>{{ school.logo }}</td>
                <td>{{ school.aboutText }}</td>
                <td>{{ school.mission }}</td>
                <td>{{ school.vision }}</td>
                <td>{{ school.principalMessage }}</td>
                <td>
                    <a href="{{ path('app_school_show', {'id': school.id}) }}">show</a>
                    <a href="{{ path('app_school_edit', {'id': school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_school_new') }}">Create new</a>
{% endblock %}
