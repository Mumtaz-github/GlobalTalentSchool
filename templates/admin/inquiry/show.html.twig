{% extends 'base.html.twig' %}

{% block title %}Inquiry Details{% endblock %}

{% block body %}
<div class="container py-5">

    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-2 rounded">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_inquiry_index') }}">Inquiries</a></li>
            <li class="breadcrumb-item active" aria-current="page">Inquiry #{{ inquiry.id }}</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-4">
        <h1 class="display-6"><i class="fas fa-envelope-open-text text-success"></i> Inquiry Details</h1>
        <p class="text-muted">Details for inquiry submitted by <strong>{{ inquiry.name }}</strong>.</p>
    </div>

    <!-- Inquiry Details Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ inquiry.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Name</th>
                        <td>{{ inquiry.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td><a href="mailto:{{ inquiry.email }}">{{ inquiry.email }}</a></td>
                    </tr>
                    <tr>
                        <th scope="row">Phone</th>
                        <td>{{ inquiry.phone }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Message</th>
                        <td>{{ inquiry.message }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td>
                            <span class="badge bg-{{ inquiry.type == 'admission' ? 'primary' : 'info' }}">
                                {{ inquiry.type|upper }}
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Created At</th>
                        <td>{{ inquiry.createdAt ? inquiry.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <!-- Action Buttons -->
            <div class="mt-3 d-flex gap-2">
                <a href="{{ path('app_inquiry_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a href="{{ path('app_inquiry_edit', {'id': inquiry.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                {{ include('admin/inquiry/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}



