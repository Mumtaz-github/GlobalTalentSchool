{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

<div class="row g-3">
    {% for child in form %}
        {% if child.vars.block_prefixes[1] != '_token' %}
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(child, {'attr': {'class': 'text-danger small mt-1'}}) }}
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>

<div class="mt-4 d-flex gap-2">
    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> {{ button_label|default('Save') }}
    </button>
    <a href="{{ path('app_inquiry_index') }}" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>

{{ form_end(form) }}

