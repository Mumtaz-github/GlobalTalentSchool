{% extends 'base.html.twig' %}

{% block title %}Create New Inquiry{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-2 rounded">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_inquiry_index') }}">Inquiries</a></li>
            <li class="breadcrumb-item active" aria-current="page">New Inquiry</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-4">
        <h1 class="display-6"><i class="fas fa-envelope-open-text text-success"></i> Create New Inquiry</h1>
        <p class="text-muted">Fill out the form below to add a new inquiry.</p>
    </div>

    <!-- Form Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            {{ include('admin/inquiry/_form.html.twig') }}

            <div class="mt-3">
                <a href="{{ path('app_inquiry_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
