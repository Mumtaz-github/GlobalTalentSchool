







{% extends 'base.html.twig' %}

{% block title %}Faculty Management{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="fas fa-chalkboard-teacher text-success"></i> Faculty Management</h1>
        <a href="{{ path('app_faculty_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Faculty
        </a>
    </div>

    {% if faculties is not empty %}
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Bio</th>
                        <th>Photo</th>
                        <th>Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for faculty in faculties %}
                        <tr>
                            <td>{{ faculty.id }}</td>
                            <td>{{ faculty.name }}</td>
                            <td>{{ faculty.designation }}</td>
                            <td>{{ faculty.bio|length > 50 ? faculty.bio|slice(0, 50) ~ '...' : faculty.bio }}</td>
                            <td>
                                {% if faculty.photo %}
                                    <img src="{{ asset('uploads/faculty/' ~ faculty.photo) }}" alt="{{ faculty.name }}" height="50">
                                {% else %}
                                    <span class="text-muted">No Photo</span>
                                {% endif %}
                            </td>
                            <td>{{ faculty.displayOrder }}</td>
                            <td>
                                <a href="{{ path('app_faculty_show', {'id': faculty.id}) }}" class="btn btn-sm btn-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_faculty_edit', {'id': faculty.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_faculty_delete', {'id': faculty.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ faculty.id) }}">
                                    <button class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-muted text-center">No faculty found.</p>
    {% endif %}
</div>
{% endblock %}

























