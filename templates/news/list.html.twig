{% extends 'base.html.twig' %}

{% block title %}News & Events - Global Talent School{% endblock %}

{% block body %}
<div style="background: linear-gradient(135deg, #20c997 0%, #198754 100%); padding: 80px 0; color: white;">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">News & Events</h1>
        <p class="lead">Stay updated with the latest happenings at GTS</p>
    </div>
</div>

<section class="py-5">
    <div class="container">
        {% if news|length > 0 %}
        <div class="row g-4">
            {% for item in news %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    {% if item.image %}
                    <img src="{{ item.image }}" class="card-img-top" alt="{{ item.title }}" style="height: 250px; object-fit: cover;">
                    {% else %}
                    <div style="height: 250px; background: linear-gradient(135deg, #20c997 0%, #198754 100%); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-newspaper fa-6x text-white"></i>
                    </div>
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <small class="text-muted mb-2">
                            <i class="far fa-calendar"></i> {{ item.date|date('F d, Y') }}
                        </small>
                        <h5 class="card-title">{{ item.title }}</h5>
                        <p class="card-text flex-grow-1">{{ item.excerpt }}</p>
                        <a href="{{ path('news_detail', {id: item.id}) }}" class="btn btn-outline-primary btn-sm">
                            Read More <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-newspaper fa-3x mb-3"></i>
            <h4>No News Yet</h4>
            <p class="mb-0">Check back soon for the latest news and updates from Global Talent School!</p>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}