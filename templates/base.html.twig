<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Global Talent School - Bara Bandai, Swat{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('design/css/head.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>




<body>
  {# Navbar #}
    {% include 'partials/nav.html.twig' %}

    {# Flash Messages #}
    {% include 'partials/flash.html.twig' %}

    {# Main Content #}
    <main class="container-fluid p-0">
        {% block body %}{% endblock %}
    </main>

    {# Footer #}
    {% include 'partials/footer.html.twig' %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    	<!-- Custom JS -->
			<script src="{{ asset('design/js/scripts.js') }}" defer></script>

    {% block javascripts %}{% endblock %}



    {# Google Translate Widget (hidden) #}
  <div id="google_translate_element" style="display:none;"></div>
  <script type="text/javascript">
      function googleTranslateElementInit() {
          new google.translate.TranslateElement({
              pageLanguage: 'en',
              includedLanguages: 'en,ur,ps,ar,fr',
              layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
              autoDisplay: false
          }, 'google_translate_element');
      }

      // Function to set language using Google Translate cookie
      function setTranslateLang(lang) {
          document.cookie = "googtrans=/en/" + lang + "; path=/";
          location.reload();
      }
  </script>
  <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

  <style>
      .goog-te-banner-frame { display: none !important; }
      body { top: 0 !important; }
      .skiptranslate { display: none !important; }
  </style>



  <!-- Admission Modal -->
<div class="modal fade" id="admissionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #198754 0%, #146c43 100%); color: white;">
                <h4 class="modal-title">
                    <i class="fas fa-graduation-cap"></i> Admission Application Form
                </h4>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="admissionModalContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Load admission form via AJAX when modal opens
document.addEventListener('DOMContentLoaded', function() {
    const admissionModal = document.getElementById('admissionModal');
    if (admissionModal) {
        admissionModal.addEventListener('show.bs.modal', function () {
            fetch('{{ path('admissions_modal') }}')
                .then(response => response.text())
                .then(html => {
                    document.getElementById('admissionModalContent').innerHTML = html;
                })
                .catch(error => {
                    document.getElementById('admissionModalContent').innerHTML = 
                        '<div class="alert alert-danger">Failed to load form. Please try again.</div>';
                });
        });
    }
});
</script>


<!-- Floating Admission Button -->
<button 
    class="btn btn-success rounded-circle shadow-lg" 
    data-bs-toggle="modal" 
    data-bs-target="#admissionModal"
    style="position: fixed; bottom: 120px; right: 40px; width: 70px; height: 70px; z-index: 1000; animation: pulse 2s infinite;"
    title="Apply for Admission">
    <i class="fas fa-graduation-cap fa-2x"></i>
</button>

<style>
@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}
</style>
</body>
</html>